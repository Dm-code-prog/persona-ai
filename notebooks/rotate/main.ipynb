    "import os\n",
    "\n",
    "\n",
    "def recursively_list_dir(dir_path):\n",
    "    files = {}\n",
    "    for root, _, f in os.walk(dir_path):\n",
    "        files[root] = f\n",
    "    return files\n",
    "\n",
    "print(recursively_list_dir('input'))"
